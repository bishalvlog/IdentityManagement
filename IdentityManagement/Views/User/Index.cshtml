@model IEnumerable<ApplicationUser>

    <br/>
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
    </div>
    <div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Email
                </th>
                <th>
                    Name
                </th>
                <th>
                    Roles
                </th>
                <th>

                </th>

            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.Name</td>
                    <td>@item.Role</td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    Edit
                                </a>
                                @if(item.LockoutEnd==null || item.LockoutEnd < DateTime.Now)
                                {
                                    //we want to show them
                                    <button asp-controller="LockUnlock" asp-route-user-Id="@item.Id" class=" btn btn-success text-white" style="cursor:pointer">
                                        <span>&nbsp; lock &nbsp;</span>
                                    </button>
                                }
                                else
                                {
                                    // we want to show them to unlock
                                    <button asp-controller="LockUnlock" asp-route-user-Id="@item.Id" class=" btn btn-warning text-white" style="cursor:pointer">
                                        <span>&nbsp; Unlock &nbsp;</span>
                                    </button>
                                    
                                }

                                <button type="submit" onclick="return confirm('are you sure you want to delete')" class="btn btn-danger">DELETE</button>
                            </form>

                        </div>
                    </td>
                </tr>
            }

        </table>
    }

    </div>