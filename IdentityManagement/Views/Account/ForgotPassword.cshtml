@model IdentityManagement.Models.ViewModel.ForgotPasswordVm;
<h1 class="text-info">Forgot Your Password?</h1>
<form method="post" asp-action="ForgotPassword" asp-controller="Account"  role="form">

    <h4>Enter Your Email </h4>
    <hr />
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />  
             </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
    
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}