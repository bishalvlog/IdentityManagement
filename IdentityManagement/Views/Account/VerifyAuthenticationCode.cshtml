@model IdentityManagement.Models.ViewModel.VerifyAuthenticatorVm

<h1>Verify Authenticator Code</h1>
<form asp-controller="Account" asp-action="VerifyAuthenticationCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
    <div asp-validation-summary="All" class="text-danger"> </div>
        <input  asp-for="RememberMe" type="hidden"/>
        <hr />
        <div class="form-group">
            <label asp-for="Code" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger">


                </span>

            </div>

        </div>
        <div class="form-group">
            <div class="offset-md-2 col-md-10"> </div>
            <button type="submit" class="btn btn-success">Submit</button>

        </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}